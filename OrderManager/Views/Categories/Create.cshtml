@model OrderManager.Entities.Category

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-5">Tạo mới danh mục</h1>
<hr/>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="NameCategory" class="control-label"></label>
                    <input asp-for="NameCategory" class="form-control"/>
                    <span asp-validation-for="NameCategory" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Tạo mới" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">< Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}