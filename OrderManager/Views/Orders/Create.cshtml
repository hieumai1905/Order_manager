@model OrderManager.Entities.Order

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-5">Tạo mới đơn hàng</h1>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="OrderAt" class="control-label"></label>
                    <input asp-for="OrderAt" class="form-control" type="date" />
                    <span asp-validation-for="OrderAt" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Volume" class="control-label"></label>
                    <input asp-for="Volume" class="form-control" type="number" value="0" />
                    <span asp-validation-for="Volume" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Mass" class="control-label"></label>
                    <input asp-for="Mass" class="form-control" value="0" type="number"/>
                    <span asp-validation-for="Mass" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TimeOrder" class="control-label"></label>
                    <input asp-for="TimeOrder" class="form-control" value="0" min="0" />
                    <span asp-validation-for="TimeOrder" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ShipIn" class="control-label"></label>
                    <input asp-for="ShipIn" class="form-control" value="0" min="0"/>
                    <span asp-validation-for="ShipIn" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TotalPrice" class="control-label"></label>
                    <input asp-for="TotalPrice" class="form-control" value="0" type="number"/>
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PriceIn" class="control-label"></label>
                    <input asp-for="PriceIn" class="form-control" value="0" type="number"/>
                    <span asp-validation-for="PriceIn" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PriceOut" class="control-label"></label>
                    <input asp-for="PriceOut" class="form-control" value="0" type="number"/>
                    <span asp-validation-for="PriceOut" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ShipPrice" class="control-label"></label>
                    <input asp-for="ShipPrice" class="form-control" value="0" type="number"/>
                    <span asp-validation-for="ShipPrice" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TypeWrap" class="control-label"></label>
                    <textarea class="form-control" rows="4" asp-for="TypeWrap">
                    </textarea>
                    <span asp-validation-for="TypeWrap" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}