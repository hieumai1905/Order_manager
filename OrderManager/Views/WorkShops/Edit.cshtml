@model OrderManager.Entities.WorkShop

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mt-5">Chỉnh sửa thông tin xưởng</h1>
<hr/>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="WorkShopId"/>
                <div class="form-group mb-3">
                    <label asp-for="NameWorkShop" class="control-label"></label>
                    <input asp-for="NameWorkShop" class="form-control"/>
                    <span asp-validation-for="NameWorkShop" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control"/>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Wechat" class="control-label"></label>
                    <input asp-for="Wechat" class="form-control"/>
                    <span asp-validation-for="Wechat" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LinkShop" class="control-label"></label>
                    <input asp-for="LinkShop" class="form-control"/>
                    <span asp-validation-for="LinkShop" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control"/>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Lưu" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}