@model OrderManager.Entities.OrderDetail

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-5">Thêm sản phầm cho đơn hàng</h1>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" min="1" value="1" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="OrderId" value="@ViewData["OrderId"]" />
                <div class="form-group mb-3">
                    <label asp-for="ProductId" class="control-label"></label>
                    <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" asp-controller="Orders">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
